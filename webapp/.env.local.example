# Smart Menu Webapp Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# BACKEND API URL
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get this from https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===========================================
# STRIPE PRICE IDS
# ===========================================
# Create these in Stripe Dashboard > Products
# Each plan needs both monthly and yearly prices

# Starter Plan ($39/month or $374.40/year = 20% off)
NEXT_PUBLIC_STRIPE_BASIC_MONTHLY_PRICE_ID=price_starter_monthly_id
NEXT_PUBLIC_STRIPE_BASIC_YEARLY_PRICE_ID=price_starter_yearly_id

# Professional Plan ($89/month or $854.40/year = 20% off)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id

# Enterprise Plan ($199/month or $1910.40/year = 20% off)
NEXT_PUBLIC_STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id
NEXT_PUBLIC_STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id
